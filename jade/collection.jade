									.related_item.swiper-slide
										a.related_album_cover(href='#')
											img(src='i/related_album.jpg')
											.related_price.fz_17.fw_600 $ 1.30
										p.related_year 2015
										p A State Of Trance
										p.related_artist Armin Van Buuren

						.album_wrapper
							.album_title More Lady Gaga’s albums
							.related_list.swiper-container.noSwipe: .swiper-wrapper
								+loop_while(20)
