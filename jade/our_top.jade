include mixins
include mixins_3
doctype html
html.mob_menu_close.mob_aside_close.mobile_.tablet_(lang='ru')
	+dev_head('ivave our top ', false, true)

	body
		+bottom_player()
		.wrapper
			+page_header('Our Top', false, true )
			.base
				.global_left_track.globalLeftTrack
				.global_right_track.globalRightTrack
				.filter_holder: .filterListScroller
					ul#top_list.filter_list.blue_mod.fw_600.text_upper.noSwipe
						li.filter_item: a.filter_link(href='#top_tab_1'): span.middle_block Today
						li.filter_item: a.filter_link(href='#top_tab_2'): span.middle_block Weekly
						li.filter_item: a.filter_link(href='#top_tab_3'): span.middle_block Monthly
						li.filter_item: a.filter_link(href='#top_tab_4'): span.middle_block Year

				div.main_content
					.content_block.compilation_mod
						.tabBlock(data-tab-context='#top_list')
							#top_tab_1
								ul.search_result_list
									+loop_while(9)
										li.search_result_item: .result_item_inner.text_center
											a.related_album_cover(href='#')
												img(src='i/aside_album_1.jpg')
												.related_price.fw_600 $ 1.20
												.album_index 1
											.search_result_info
												p.one_line_mod: a.default_link(href='#') A State Of Trance A State Of Trance
												p.color_gray.one_line_mod Armin Van Buuren
												p.color_gray 2015
							#top_tab_2
								ul.search_result_list
									+loop_while(15)
