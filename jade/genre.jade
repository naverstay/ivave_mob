- artist = false;
include mixins
doctype html
html.mob_menu_close.mob_aside_close.mobile_.tablet_(lang='ru')
	+dev_head('ivave genre ', true, false, false, false, false, false, true)

	body.menu_open_
		+bottom_player()
		div.wrapper
			+page_header('Jazz', false, false, false, false, false, false, false, false, true)
			.base
				.global_left_track.globalLeftTrack
				.global_right_track.globalRightTrack
				.filter_holder
					a.filter_toggle_btn.filterToggleBtn.icon-filter(href='#')
					.filterListScroller
						ul#genre_list.filter_list.blue_mod.fw_600.text_upper.noSwipe
							li.filter_item: a.filter_link(href='#genre_tab_1'): span.middle_block Albums 
							li.filter_item: a.filter_link(href='#genre_tab_2'): span.middle_block Artists
				.filter_sort.chosen_v3.no_search
					- var n = 0
					select.chosen-select(data-scrollbar="true")
						while n < 3
							-n++;
							option Sort by Popularity #{n}
				div.main_content
					.content_block.compilation_mod
						.tabBlock(data-tab-context='#genre_list')
							#genre_tab_1
								ul.search_result_list
									+loop_while(9)
										li.search_result_item: .result_item_inner.text_center
											a.related_album_cover(href='#')
												img(src='i/aside_album_1.jpg')
												//.related_price.fw_600 $ 1.20
											.search_result_info
												p.one_line_mod: a.default_link(href='#') A State Of Trance A State Of Trance
												p.color_gray.one_line_mod Armin Van Buuren
												p.color_gray 2015
													
							#genre_tab_2
								ul.search_result_list
									+loop_while(4)
										li.search_result_item: .result_item_inner.text_center
											a.fav_artist_cover(href='#')
												img(src='i/artist_1.png')
											.search_result_info.fz_12
												p.one_line_mod: a.default_link(href='#') Frank Sinatra
												p.color_gray.one_line_mod 225 Albums
										li.search_result_item: .result_item_inner.text_center
											a.fav_artist_cover(href='#')
												img(src='i/no_avatar.png')
											.search_result_info.fz_12
												p.one_line_mod: a.default_link(href='#') Frank Sinatra
												p.color_gray.one_line_mod 225 Albums
					
					
				+page_footer()
			+popups()
			+dev_btns()
			+dev_pages()